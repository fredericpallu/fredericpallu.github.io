    // 1) Date visible + JSON-LD dateModified
    (function(){
      var d = new Date(document.lastModified);
      var fr = d.toLocaleDateString('fr-FR', {day:'2-digit', month:'long', year:'numeric'});
      var span = document.getElementById('maj'); if(span) span.textContent = fr;
      var iso = new Date(d.getTime() - d.getTimezoneOffset()*60000).toISOString().slice(0,10);
      var ld = document.getElementById('ld-webpage');
      if(ld){ try{ var data = JSON.parse(ld.textContent); data.dateModified = iso; ld.textContent = JSON.stringify(data, null, 2);}catch(e){} }
    })();

    // 2) Construire l‚ÄôItemList JSON-LD √† partir des cartes (titres + 1re puce)
    (function(){
      var cards = Array.from(document.querySelectorAll('#actions-campus .card'));
      var items = cards.map(function(card, idx){
        var title = card.querySelector('h3')?.textContent?.trim() || 'Action';
        var first = card.querySelector('ul li')?.textContent?.trim() || '';
        return {
          "@type":"ListItem",
          "position": idx+1,
          "item": {
            "@type":"CreativeWork",
            "name": title,
            "description": first
          }
        };
      });
      var el = document.getElementById('ld-itemlist');
      if(el){ try{ var json = JSON.parse(el.textContent); json.itemListElement = items; el.textContent = JSON.stringify(json, null, 2);}catch(e){} }
      // KPIs rapides
      document.getElementById('kpi-actions').textContent = cards.length;
      document.getElementById('kpi-partenaires').textContent = 4; // ajuste si besoin
    })();
  </script>
